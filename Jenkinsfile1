pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
   
    stages {
       
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/chandrahas02/Zomato.git'
            }
        }
         
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t chandrahas0221/zomatoapp:1.0 ."
            }
        }
    }
}
